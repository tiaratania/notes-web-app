@model Topic

@{ 
    var l = ViewData["topics"];
}

<form id="fmNewTopic" class="form-horizontal" role="form">
    <div class="form-group row">
        <label class="control-label col-3"
               style="text-align:left">Module:</label>
        <select id="ddlNewTopicModuleId" asp-for="ModuleId"
                class="form-control-input col-8"></select>
    </div>
    <div class="form-group row">
        <label class="control-label col-3"
               style="text-align:left">Topic Id:</label>
        <input id="txtNewTopicId" asp-for="TopicId"
               class="form-control-input col-3" />
    </div>
    <div class="form-group row">
        <label class="control-label col-3" 
               style="text-align:left">Title:</label>
        <input id="txtNewTopicTitle" asp-for="Title"
               class="form-control-input col-8" />
    </div>
</form>



